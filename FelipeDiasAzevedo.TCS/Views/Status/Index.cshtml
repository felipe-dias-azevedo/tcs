@model StatusViewModel;
@{
    ViewData["Title"] = "Status";
}

<div class="container">

    <h3 class="display-4 mb-3">Services</h3>

    <ul class="list-group">

        @foreach (var service in Model.Services)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">

                <span class="fw-bold">@service.Name</span>

                @if (service.Running)
                {
                    <i title="OK" class="bi bi-check-circle-fill fs-3 text-success"></i>
                }

                @if (!service.Running)
                {
                    <i title="NOT OK" class="bi bi-x-circle-fill fs-3 text-danger"></i>
                }
            </li>
        }
    </ul>
</div>
