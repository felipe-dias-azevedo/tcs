@{
    ViewData["Title"] = "Shutdown";
}

<h3 class="display-4 mb-4">Shutdown</h3>

<div class="alert alert-danger d-flex align-items-center p-4 rounded shadow-sm w-100">
    <div class="me-4 display-4">
        <i class="bi bi-exclamation-triangle-fill"></i>
    </div>
    <div>
        <h5 class="mb-3">
            You are about to <span class="fw-bold text-danger">shutdown</span> the system immediately.
        </h5>
        <p class="mb-4">
            This will stop all running services and may interrupt critical processes. Are you sure you want to proceed?
        </p>
        <form asp-action="ShutdownSystem" method="post">
            <button type="submit" class="btn btn-danger">
                Confirm Shutdown
            </button>
        </form>
    </div>
</div>
