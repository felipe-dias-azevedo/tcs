@model ServiceStatusViewModel;
@{
    ViewData["Title"] = $"Start Service \"{Model.Name}\"";
    
    var confirmationAlert = new ConfirmationAlertViewModel
    {
        Header = "Start service",
        Body = $"Are you sure you want to <span class=\"fw-bold\">Start</span> the service <span class=\"fw-bold text-body\">{Model.DisplayName}</span> ?",
        Button = "Confirm Start",
        Action = "StartService",
        Icon = "bi-play-circle-fill",
        Color = "success",
        QueryName = Model.Name
    };
}

<h3 class="display-4 mb-4">Start</h3>

<partial name="_ConfirmationAlert" model="confirmationAlert" />
